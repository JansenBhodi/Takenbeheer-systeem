@page
@model EditModel
@{


    <div>
        <h1>
            Edit task
        </h1>
        <form method="post">
            <div>
                <input type="hidden" name="Id" value="@Model.Input.Id" />
                <h2>Name:</h2>
                <input type="text" name="Name" value="@Model.Input.Name" required />
                <h2>Role:</h2>
                <div>
                    <input id="RoleWorker" type="radio" name="Role" value="1" required />
                    <label for="RoleWorker">Worker</label>

                    <input id="RoleTeamLead" type="radio" name="Role" value="2" required />
                    <label for="RoleTeamLead">Teamlead</label>
                </div>
                <h2>Address:</h2>
                <input type="text" name="Address" value="@Model.Input.Address" required />
                <h2>PostalCode:</h2>
                <input type="text" name="PostalCode" value="@Model.Input.PostalCode" required />
                <h2>Email:</h2>
                <input type="email" name="Email" value="@Model.Input.Email" required />
                <h2>Password:</h2>
                <input type="password" name="Password" value="@Model.Input.Password" pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,}" required />
                <br />
                <a>Must contain at least one number and one uppercase and lowercase letter, and at least 8 or more characters.</a>
                <br />
                <input class="text-yellow" type="submit" value="Register" />
            </div>
        </form>
    </div>



}
